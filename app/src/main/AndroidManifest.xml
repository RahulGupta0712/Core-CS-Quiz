<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoreQuiz"
        tools:targetApi="31">
        <activity
            android:name=".ScoreActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionsActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileDetails"
            android:exported="false" />
        <activity
            android:name=".Authentication.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Authentication.EmailVerifyActivity"
            android:exported="false" />
        <activity
            android:name=".Authentication.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Authentication.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Authentication.MainAuthActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>